<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="materialtest.com.example.andr.materialtest.PerfilActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:id="@+id/perfilIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/batman"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="24sp"
                    android:text="Batman Robin"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1500 pontos"
                    android:textColor="@color/accentColor"
                    android:textSize="34sp"/>
                </LinearLayout>



            </LinearLayout>


        <TextView
            android:paddingLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Últimas medalhas"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="8dp"
        android:paddingRight="16dp">

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/medal_icon"/>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/medal_2"/>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/medal_twitter"/>
    </LinearLayout>

        <TextView
            android:paddingLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Últimas ações"/>

        <View style="@style/Divider"/>

        <LinearLayout
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="265dp"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:textColor="@color/black"
                android:text="Realizou rota desde UFPE até Paço Alfândega, utilizando ônibus e bicicleta."
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="16dp"

                android:gravity="center_vertical|right"
                android:textSize="16sp"

                android:textColor="@color/accentColor"
                android:text="150 pts"/>




            </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="265dp"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:textColor="@color/black"
                android:text="Realizou rota na orla de boa viagem utilizando bicicleta"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="16dp"

                android:gravity="center_vertical|right"
                android:textSize="16sp"

                android:textColor="@color/accentColor"
                android:text="75 pts"/>




        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="265dp"
                android:layout_height="match_parent"
                android:paddingLeft="16dp"
                android:textColor="@color/black"
                android:text="Realizou rota desde estação Joana Bezerra até estação TIP, utilizando metrô"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="16dp"

                android:gravity="center_vertical|right"
                android:textSize="16sp"

                android:textColor="@color/accentColor"
                android:text="150 pts"/>




        </LinearLayout>

        <View style="@style/Divider"/>



        </LinearLayout>
</LinearLayout>
